<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.InfoUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/xanh"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_back_info_user"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/leftarrow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông Tin Người Dùng"
            android:textSize="20dp"
            android:textColor="@color/trangngoc"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginStart="70dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="6"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Họ Tên : "
                android:textColor="@color/xanh"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_infouser_name"
                android:layout_weight="4"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyễn Công Minh"
                android:gravity="end"
                android:textColor="@color/xanh"
                android:textSize="20dp"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/xanh"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="6"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới Tính : "
                android:textColor="@color/xanh"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_infouser_gender"
                android:layout_weight="4"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="minh@gmail.com"
                android:gravity="end"
                android:textColor="@color/xanh"
                android:textSize="20dp"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/xanh"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="6"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày Sinh : "
                android:textColor="@color/xanh"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_infouser_date"
                android:layout_weight="4"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="minh@gmail.com"
                android:gravity="end"
                android:textColor="@color/xanh"
                android:textSize="20dp"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/xanh"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="6"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa Chỉ : "
                android:textColor="@color/xanh"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_infouser_address"
                android:layout_weight="4"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thái Bình"
                android:gravity="end"
                android:textColor="@color/xanh"
                android:textSize="20dp"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/xanh"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="6"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số Điện Thoại : "
                android:textColor="@color/xanh"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_infouser_phonenumber"
                android:layout_weight="4"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0987654321"
                android:gravity="end"
                android:textColor="@color/xanh"
                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_update_khachhang"
        android:layout_marginTop="380dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="Chỉnh sửa thông tin cá nhân"
        android:textSize="15dp"
        android:background="@drawable/item_border"/>

</LinearLayout>