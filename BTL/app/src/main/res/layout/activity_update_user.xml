<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UpdateUserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/xanh"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_back_update_info_user"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/leftarrow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chỉnh Sửa Thông Tin Người Dùng"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/trangngoc"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_name_update"
            android:layout_width="350dp"
            android:layout_height="50dp"

            android:background="@drawable/lavender_border"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:hint="Name"
            android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
            android:drawablePadding="8dp"/>
        <LinearLayout

            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_marginEnd="10dp"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Gender"
                android:textSize="19dp"
                android:background="@drawable/item_border"
                android:layout_gravity="center"
                android:padding="10dp"
                android:hint="Password"
                android:drawableLeft="@drawable/baseline_all_inclusive_24"
                android:drawablePadding="8dp"/>
            <RadioGroup
                android:id="@+id/edt_gender_signup"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:background="@drawable/lavender_border"

                android:layout_gravity="center"
                android:padding="10dp"
                android:hint="Gender"
                android:orientation="horizontal"
                android:drawableLeft="@drawable/baseline_all_inclusive_24"
                android:drawablePadding="8dp">
                <RadioButton
                    android:id="@+id/rbt_gender_male_update"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nam"/>
                <RadioButton
                    android:id="@+id/rbt_gender_female_update"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nữ"/>
            </RadioGroup>
        </LinearLayout>
        <EditText
            android:id="@+id/edt_dateofbirth_update"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:editable="false"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:hint="Date Of Birth"
            android:drawableLeft="@drawable/baseline_date_range_24"
            android:drawablePadding="8dp"/>
        <EditText
            android:id="@+id/edt_address_update"
            android:layout_width="350dp"
            android:layout_height="50dp"

            android:background="@drawable/lavender_border"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:hint="Address"
            android:drawableLeft="@drawable/baseline_location_on_24"
            android:drawablePadding="8dp"/>
        <EditText
            android:id="@+id/edt_phonenumber_update"
            android:layout_width="350dp"
            android:layout_height="50dp"

            android:background="@drawable/lavender_border"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:hint="Phone Number"
            android:drawableLeft="@drawable/baseline_phone_android_24"
            android:drawablePadding="8dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_update_info_khachhang"
        android:layout_marginTop="290dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="Cập Nhật thông tin cá nhân"
        android:textSize="15dp"
        android:background="@drawable/item_border"/>


</LinearLayout>