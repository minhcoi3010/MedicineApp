<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/item_border"
    android:id="@+id/ll_list_view_buy"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_anh_thuoc_list_buy"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:src="@drawable/products1"/>

    <TextView
        android:id="@+id/tv_ten_thuoc_list_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên Thuốc"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_mo_ta_list_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="3"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:textColor="#D7000000"
        android:text="Thuốc Imidu 60mg có thành phần chính là
        Isosorbid-5-mononitrat. Hoạt chất này có tác dụng làm giãn hệ động mạch,
        bao gồm cả mạch vành. Từ đó, giúp làm giảm tiêu thụ oxy của cơ tim, cắt
        cơn đau thắt ngực. Ngoài ra, Isosorbid-5-mononitrat còn làm giảm áp lực
        thất phải và tuần hoàn phổi trong suy tim.."/>

    <TextView
        android:id="@+id/tv_dongiaban_list_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="300000đ / hộp"
        android:textSize="20dp"
        android:textColor="@color/lavender"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/btn_mua_list_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Chọn Mua"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/lavender_border"/>


</LinearLayout>