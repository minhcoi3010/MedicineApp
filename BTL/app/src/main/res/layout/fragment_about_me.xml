<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trangngoc"
    tools:context=".fragment.AboutMeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/xanh"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back_about_me"
                android:layout_marginStart="15dp"
                android:layout_marginTop="22dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/leftarrow"/>


            <TextView
                android:id="@+id/tv_about_me_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xin Chào Minh"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="20dp"
                android:textColor="@color/trangngoc"/>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đơn Hàng Của Tôi"
                    android:layout_marginTop="15dp"

                    android:layout_marginStart="15dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#787676"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_processing"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="14dp"
                        android:background="@drawable/item_border"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/newproduct" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="2"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Đang Xử Lý"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_delivering"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="14dp"
                        android:background="@drawable/item_border"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/expressdelivery" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:lines="2"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Đã Xử Lý"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_delivered"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="14dp"
                        android:background="@drawable/item_border"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/correct" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:lines="2"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Đang Giao"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_exchange"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"

                        android:background="@drawable/item_border"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/exchange" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:lines="2"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Đổi/Trả"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tài Khoản"
                    android:layout_marginTop="15dp"

                    android:layout_marginStart="15dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#787676"
                    />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_border"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ll_thongtinkhachhang"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginStart="5dp"
                            android:layout_margin="12dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/userinformation"/>

                        <TextView
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:text="Thông Tin Cá Nhân"
                            android:textSize="20dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#D7000000"/>

                        <ImageView
                            android:layout_marginTop="15dp"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/rightarrow1"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginStart="5dp"
                            android:layout_margin="12dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/qr"/>

                        <TextView
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:text="Mã QR của tôi"
                            android:textSize="20dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#D7000000"/>

                        <ImageView
                            android:layout_marginTop="15dp"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/rightarrow1"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginStart="5dp"
                            android:layout_margin="12dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/location"/>

                        <TextView
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:text="Quản Lý Sổ Địa Chỉ"
                            android:textSize="20dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#D7000000"/>

                        <ImageView
                            android:layout_marginTop="15dp"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/rightarrow1"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginStart="5dp"
                            android:layout_margin="12dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/creditcard"/>

                        <TextView
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:text="Quản Lý Thẻ Thanh Toán"
                            android:textSize="20dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#D7000000"/>

                        <ImageView
                            android:layout_marginTop="15dp"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/rightarrow1"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginStart="5dp"
                            android:layout_margin="12dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/verified"/>

                        <TextView
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:text="Đơn Thuốc Của Tôi"
                            android:textSize="20dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#D7000000"/>

                        <ImageView
                            android:layout_marginTop="15dp"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/rightarrow1"
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Về Nhà Thuốc Pharmacy"

                        android:layout_marginStart="15dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#787676"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_border"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginStart="5dp"
                                android:layout_margin="12dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/googledocs"/>

                            <TextView
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:text="Quy Chế Hoạt Động"
                                android:textSize="20dp"
                                android:layout_marginTop="10dp"
                                android:textColor="#D7000000"/>

                            <ImageView
                                android:layout_marginTop="15dp"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:src="@drawable/rightarrow1"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginStart="5dp"
                                android:layout_margin="12dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/information"/>

                            <TextView
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:text="Giới Thiệu"
                                android:textSize="20dp"
                                android:layout_marginTop="10dp"
                                android:textColor="#D7000000"/>

                            <ImageView
                                android:layout_marginTop="15dp"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:src="@drawable/rightarrow1"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginStart="5dp"
                                android:layout_margin="12dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/pen"/>

                            <TextView
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:text="Chính Sách Nội Dung"
                                android:textSize="20dp"
                                android:layout_marginTop="10dp"
                                android:textColor="#D7000000"/>

                            <ImageView
                                android:layout_marginTop="15dp"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:src="@drawable/rightarrow1"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginStart="5dp"
                                android:layout_margin="12dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/headphones"/>

                            <TextView
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:text="Liên Hệ Và Hỗ Trợ"
                                android:textSize="20dp"
                                android:layout_marginTop="10dp"
                                android:textColor="#D7000000"/>

                            <ImageView
                                android:layout_marginTop="15dp"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:src="@drawable/rightarrow1"
                                />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/exit"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đăng Xuất"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>