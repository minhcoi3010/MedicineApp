<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/ll_main_bestseller"
    android:background="@drawable/item_border"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_thuoc_goods_detail"
        android:background="@drawable/item_border_gray"
        android:layout_width="80dp"
        android:layout_margin="10dp"
        android:layout_height="80dp"
        android:src="@drawable/products1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_ten_thuoc_goods_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Thuốc : aaaa"
            android:textSize="17dp"
            android:lines="1"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:textColor="#D8000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="7"
                android:id="@+id/tv_sl_goods_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SL : 1"
                android:textSize="17dp"
                android:lines="1"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:textColor="#D8000000"/>

            <TextView
                android:layout_weight="3"
                android:id="@+id/tv_dongiaban_goods_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Giá : 300000đ / hộp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/lavender"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_thanhtien_goods_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thành Tiền : 10000000đ"
            android:lines="1"
            android:textSize="17dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:textColor="#D8000000"/>
    </LinearLayout>

</LinearLayout>